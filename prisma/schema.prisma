generator client {
  provider = "prisma-client-js"
}

// Use DIRECT_URL para migrações
datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model Carro {
  id            Int      @id @default(autoincrement())
  marca         String
  modelo        String
  ano           Int
  quilometragem Int
  descricao     String
  url_imagem    String
  caracteristicas String? // Opcional
}